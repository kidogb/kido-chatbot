<aiml version="1.0.1" encoding="UTF-8">
<!-- greeting.aiml -->

    <category>
        <pattern>HELLO *</pattern>
        <template>
          <random>
            <li>Hi</li>
            <li>Hi there</li>
            <li>Hello</li>
            <li>Oh, hello</li>
          </random>
        </template>
    </category>

    <category>
        <pattern>HELLO</pattern>
